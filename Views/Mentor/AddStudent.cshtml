@model Queststore.ViewModels.ViewModelsMentor.ViewModelStudents
@{
    ViewData["Title"] = "Add student";
    Layout = "~/Views/Shared/_LayoutMentor.cshtml";
}

<h1 class="page-title">Add student</h1>
<form method="post" asp-action="AddStudent" id="add-student_form" class="form">
    <label asp-for="Student.Name" class="form__label">First name</label>
    <input asp-for="Student.Name" class="form__input" type="text" required />
    <div id="name-error" class="error"></div>

    <label asp-for="Student.Surname" class="form__label">Surname</label>
    <input asp-for="Student.Surname" class="form__input" type="text" required />
    <div id="surname-error" class="error"></div>

    <label asp-for="Student.Address" class="form__label">Adress</label>
    <input asp-for="Student.Address" class="form__input" type="text" required />
    <div id="address-error" class="error"></div>

    <label asp-for="Student.Phone" class="form__label">Phone number</label>
    <input asp-for="Student.Phone" class="form__input" type="number" required />
    <div id="phone-error" class="error"></div>

    <label asp-for="Student.Email" class="form__label">Email</label>
    <input asp-for="Student.Email" class="form__input" type="email" required />
    <div id="email-error" class="error"></div>

    <label asp-for="ClassId" class="form__label">Select class</label>
    <select asp-for="ClassId" class="form__input" asp-items="@(new SelectList(Model.Classes, "Id", "Name"))" required>
        <option>...</option>
    </select>
    <div id="class-error" class="error"></div>

    <label asp-for="Student.Language" class="form__label">Coding Language (insert 'None' if doesn't apply)</label>
    <input asp-for="Student.Language" class="form__input" type="text" />
    <div id="language-error" class="error"></div>

    <button class="button button--inverse form__button" type="submit">Add</button>
</form>