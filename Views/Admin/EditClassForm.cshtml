@model Queststore.ViewModels.ViewModelsAdmin.EditClassFormViewModel
@{
    ViewData["Title"] = "EditClassForm";
}

<h1 class="page-title">Edit class</h1>

<form method="post" asp-action="EditClassForm" asp-controller="Admin" id="form" class="form">
    <input asp-for="Class.Id" type="hidden" value="@Model.Class.Id" />
    <label asp-for="Class.Name" class="form__label">Class name</label>
    <input asp-for="Class.Name" class="form__input" type="text" id="name" value="@Model.Class.Name" required />
    <div id="nameError" class="error"></div>

    <label asp-for="MentorId" class="form__label">Select mentor</label>
    @for (int i = 0; i < Model.Mentors.Count; i++)
    {
        <li class="list__item list__item--hover">
            <span class="item__name" name="">@(i + 1). @Model.Mentors[i].Name @Model.Mentors[i].Surname</span>
            <input type="checkbox" asp-for="Mentors[i].IsChecked" checked="@Model.Mentors[i].PreviusChecked" />
            <input type="hidden" asp-for="Mentors[i].Id" />
        </li>
        <div id="mentor-error" class="error"></div>
    }

    <label for="city" class="form__label">Select city</label>
    <select asp-for="Class.City" class="form__input" id="city" asp-items="@(new SelectList(Model.Cities))">
    </select>
    <div id="mentor-error" class="error"></div>

    <button class="button button--inverse form__button" type="submit">Edit</button>
</form>