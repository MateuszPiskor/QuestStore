@model Queststore.Models.User
@{
    ViewData["Title"] = "AddMentor";
}

<h1 class="page-title">Add mentor</h1>
<form method="post" id="form" class="form">
    <label for="name" class="form__label">First name</label>
    <input class="form__input" type="text" id="name" /*required*/ />
    <div id="name-error" class="error"></div>

    <label for="surname" class="form__label">Last name</label>
    <input class="form__input" type="text" id="surname" /*required*/ />
    <div id="surname-error" class="error"></div>

    <label for="address" class="form__label">Adress</label>
    <input class="form__input" type="text" id="address" /*required*/ />
    <div id="address-error" class="error"></div>

    <label for="phone" class="form__label">Phone number</label>
    <input class="form__input" type="number" id="phone" /*required*/ />
    <div id="phone-error" class="error"></div>

    <label for="email" class="form__label">Email</label>
    <input class="form__input" type="email" id="email" /*required*/ />
    <div id="email-error" class="error"></div>

    <label for="class" class="form__label">Select class</label>
    <select asp-for="C" class="form__input" id="class" name="class" asp-items="ViewBag.Classes">
    </select>
    <div id="class-error" class="error"></div>

    <button class="button button--inverse form__button">Add</button>
</form>

