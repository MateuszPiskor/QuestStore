
@{
    ViewData["Title"] = "EditMentorForm";
}

<h1 class="page-title">Edit mentor</h1>
<form id="form" class="form">
    <label for="name" class="form__label">First Name</label>
    <input class="form__input" type="text" id="name" value="John" name="name" required />
    <div id="name-error" class="error"></div>

    <label for="surname" class="form__label">Last name</label>
    <input class="form__input" type="text" id="surname" value="Doe" name="surname" required />
    <div id="surname-error" class="error"></div>

    <label for="address" class="form__label">Adress</label>
    <input class="form__input" type="text" id="address" value="ul. Mazowiecka 5/11" name="address" required />
    <div id="address-error" class="error"></div>

    <label for="phone" class="form__label">Phone number</label>
    <input class="form__input" type="number" id="phone" value="(0048)789567345" name="phone" required />
    <div id="phone-error" class="error"></div>

    <label for="email" class="form__label">Email</label>
    <input class="form__input" type="email" id="email" value="john.doe@gmail.com" name="email" required />
    <div id="email-error" class="error"></div>

    <label for="class" class="form__label">Select class</label>
    <select class="form__input" id="class" name="class">
        <option value="Weekend-Course-krk-102019" selected>Weekend-Course-krk-102019</option>
        <option value="Weekend-Course-krk-022020">Weekend-Course-krk-022020</option>
    </select>
    <div id="class-error" class="error"></div>

    <button class="button button--inverse form__button" type="submit">Edit</button>
</form>

