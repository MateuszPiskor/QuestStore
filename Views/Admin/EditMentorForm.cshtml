@model Queststore.ViewModels.ViewModelsAdmin.EditMentorFormViewModel
@{
    ViewData["Title"] = "EditMentorForm";
}

<h1 class="page-title">Edit mentor</h1>
<form method="post" asp-action="EditMentorForm" id="form" class="form">
    <input type="hidden" asp-for="Mentor.Id" value="@Model.Mentor.Id" />
    <label asp-for="Mentor.Name" class="form__label">First name</label>
    <input asp-for="Mentor.Name" class="form__input" type="text" id="firstName" value="@Model.Mentor.Name" required />
    <div id="name-error" class="error"></div>

    <label asp-for="Mentor.Surname" class="form__label">Last name</label>
    <input asp-for="Mentor.Surname" class="form__input" type="text" id="surname" value="@Model.Mentor.Surname" required />
    <div id="surname-error" class="error"></div>

    <label asp-for="Mentor.Address" class="form__label">Adress</label>
    <input asp-for="Mentor.Address" class="form__input" type="text" id="address" value="@Model.Mentor.Address" required />
    <div id="address-error" class="error"></div>

    <label asp-for="Mentor.Phone" class="form__label">Phone number</label>
    <input asp-for="Mentor.Phone" class="form__input" type="number" id="phone" value="@Model.Mentor.Phone" required />
    <div id="phone-error" class="error"></div>

    <label asp-for="Mentor.Email" class="form__label">Email</label>
    <input asp-for="Mentor.Email" class="form__input" type="email" id="email" value="@Model.Mentor.Email" required />
    <div id="email-error" class="error"></div>

    <label asp-for="MentorId" class="form__label">Select class/classes: </label>
    @for (int i = 0; i < Model.Classes.Count; i++)
    {
        <li class="list__item list__item--hover">
            <span class="item__name" name="">@(i + 1). @Model.Classes[i].Name @Model.Classes[i].City</span>
            <input type="checkbox" asp-for="Classes[i].IsChecked" checked="@Model.Classes[i].PreviusChecked" />
            <input type="hidden" asp-for="Classes[i].Id" />
        </li>
        <div id="mentor-error" class="error"></div>
    }

    <div id="class-error" class="error"></div>
    <button class="button button--inverse form__button" type="submit">Edit</button>
</form>